<h1><%= @address.id ? 'Edit Address' : 'Create Address' %></h1>
<hr />
<%= form_for [@location, @address] do |f| %>
  <%= f.label :street %>
  <%= f.text_field :street, required: true, autofocus: true, placeholder: "Street Address" %>
  <%= f.label :city %>
  <%= f.text_field :city, required: true, placeholder: "City" %>
  <%= f.label :state %>
  <%= f.text_field :state, required: true, placeholder: "State" %>
  <%= f.label :region %>
  <%= f.text_field :region, required: true, placeholder: "Region" %>
  <%= f.label :country %>
  <%= f.text_field :country, required: true, placeholder: "Country" %>
  <%= f.label :zip %>
  <%= f.number_field :zip, required: true, placeholder: "Zip Code (numbers only)" %>
  <%= f.submit %>
<% end %>